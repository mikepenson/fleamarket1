<?xml version='1.0' encoding='UTF-8'?>
<!DOCTYPE hibernate-configuration PUBLIC
          "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
          "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<!-- Generated by MyEclipse Hibernate Tools.                   -->
<hibernate-configuration>

<session-factory>
	<property name="dialect">
		org.hibernate.dialect.MySQLDialect
	</property>
	<!-- <property name="connection.url">
		jdbc:mysql://localhost:3306/fleamarket1
		</property>
		<property name="connection.username">root</property>
		<property name="connection.password"></property>
		<property name="connection.driver_class">
		com.mysql.jdbc.Driver
		</property> -->
	<property name="myeclipse.connection.profile">
		Fleamartket1
	</property>
	<!-- 关闭 bean validate验证模式 -->
	<property name="javax.persistence.validation.mode">none</property>
	<property name="show_sql">true</property>
	<property name="format_sql">true</property>
	<!-- 开启二级缓存 -->
	<property name="hibernate.cache.use_second_level_cache">true</property>
	
	<!-- 配置二级缓存提供商，注意此处不是缓存的jar包-->
	<property name="hibernate.cache.provider_class">
		org.hibernate.cache.EhCacheProvider
	</property>
	
	<mapping resource="cn/melonydi/fleamarket/model/Admin.hbm.xml" />
	<mapping resource="cn/melonydi/fleamarket/model/User.hbm.xml" />
	<mapping resource="cn/melonydi/fleamarket/model/Goodstype.hbm.xml" />
	<mapping
		resource="cn/melonydi/fleamarket/model/Usercollect.hbm.xml" />
	<mapping resource="cn/melonydi/fleamarket/model/Subtype.hbm.xml" />
	<mapping resource="cn/melonydi/fleamarket/model/Goods.hbm.xml" />
	
	<!-- 配置哪些类支持缓存 -->
	<class-cache usage="read-only" class="cn.melonydi.fleamarket.model.Goods"/>
	<class-cache usage="read-only" class="cn.melonydi.fleamarket.model.Goodstype"/>

</session-factory>

</hibernate-configuration>